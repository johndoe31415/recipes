<recipe name="GrieÃŸbrei" lang="de">
	<ingredients>
		<porridge name="Brei">
			<ingredient name="rice" count="500" unit="g" />
			<ingredient name="water" count="700" unit="ml" />
			<ingredient name="sugar" count="2" unit="tblsp" />
			<ingredient name="mirin" count="2" unit="tblsp" />
			<ingredient name="vinegar" count="6" unit="tblsp" />
			<ingredient name="salt" count="2" unit="teasp" />
		</porridge>
	</ingredients>
	<preparation>
		<step>
			Reis waschen.
		</step>
		<step>
			Alle Zutaten vermengen und in offnem Topf zum Kochen bringen.
		</step>
		<step>
			2 Minuten offen kochen.
		</step>
		<step>
			Danach mit Deckel auf Stufe 1 15 Minuten ausquellen lassen.
		</step>
		<step>
			Vom Herd nehmen, Deckel entfernen und mindestens 10 Minuten ziehen lassen.
		</step>
	</preparation>
</recipe>
