<?xml version="1.0" encoding="utf-8"?>
<recipe name="Apfelkuchen" lang="de">
	<ingredients>
		<dough name="Teig">
			<ingredient name="sugar" count="150" unit="g" />
			<ingredient name="flour" count="250" unit="g" />
			<ingredient name="puddingpowder/vanilla" count="37" unit="g" />
			<ingredient name="bakingpowder" count="3" unit="teasp" />
			<ingredient name="salt" count="1" unit="pinch" />
			<ingredient name="butter" count="150" unit="g" />
			<ingredient name="egg/l" count="3" />
			<ingredient name="apple" count="3" />
		</dough>
	</ingredients>
	<preparation>
		<step>
			Zucker, Mehl, Puddingpulver, Backpulver und Salz verrühren. Butter und Eier dazugeben. Gestückelte Äpfel dazugeben und in Springform 150°C (Umluft) 45 Minuten backen.
		</step>
	</preparation>
</recipe>
